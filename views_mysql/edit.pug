doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/topic/') Server Side JavaScript
    ul
      each title in titles
        li
          a(href='/topic/'+title.id)= title.title
    article
      form(action='/topic/'+title.id+'/edit' method='post')
        p
          input(type='text' name='title' placeholder='title' value=title.title)
        p
          textarea(name='description' placeholder='description')
            =title.description
        p
          input(type='text' name='author' placeholder='author' value=title.description)
        p
          input(type='submit')
